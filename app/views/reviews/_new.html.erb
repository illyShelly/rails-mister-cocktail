<%= simple_form_for [cocktail, review] do |f| %>
  <%= f.input :rating, collection: 1..5, default: '1', class: "form-control-sm" %>
  <%= f.input :content, placeholder: "The best cocktail in town", class: "form-control-sm" %>

  <br>
  <%= f.button :submit, class: "btn btn-danger" %>
<% end %>


