<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <h3>Add new recipe to <%= @cocktail.name %></h3>
        <!-- get Ingredient.all ;{} created in seed.rb from JSON -->
        <%= f.association :ingredient %>
        <!-- volume of ingredient -->
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
      <hr>
      <%= link_to "Back to cocktail", cocktail_path(@cocktail) %>
    </div>
  </div>
</div>


