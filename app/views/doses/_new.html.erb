<%= simple_form_for [cocktail, dose] do |f| %>
  <!-- get Ingredient.all ;{} created in seed.rb from JSON -->
  <%= f.association :ingredient, collection: Ingredient.order('name ASC'), default: "" %>
  <!-- volume of ingredient -->
  <%= f.input :description, placeholder: "5cl or a handful", class: "form-control-sm" %>
  <br>
  <%= f.button :submit, class: "btn btn-danger" %>
<% end %>


